package javaBasic.ch04.sec01;

public class For문 {

	public static void main(String[] args) {
		// 반복문
		// 형식 while(조건) { 참이면 수행할 문장 }
		//1~100 출력하기
		// System.out.println("1 2 3 4 ... 100");
		/*int number = 1;
		System.out.println(number);
		while( number <100 ) {
			number++;
			System.out.println(number);
		}*/
		// 10 20 30 40 .. 100
		int number = 10;
		System.out.println(number);
		while (number<100) {
			number += 10;
			System.out.println(number);
		}
		System.out.println("-----------");
		//100 90 80 70...-20
		int number2 = 100;
		System.out.println(number2);
		while (number2>-11) {
			number2 -=10;
			System.out.println(number2);
		}
		//1 2 3 4 6 7 8 9 10 .. 5배수 빼고 찍기
		int number3 = 1;
		System.out.println(number3);
		while (number3<20) {
			number3 +=1;
			System.out.println(number3);
			
		}
		

	}

}
